<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <description>Holds application context for testing of the domain module.</description>

    <bean id="factoryService"
          class="com.github.vincentrussell.validation.SpringXmlContextTest$FactoryService" />

    <bean id="validationService"
          factory-bean="factoryService"
          factory-method="buildValidationService" />

    <bean id="notNullValidator"
          class="com.github.vincentrussell.validation.SpringXmlContextTest$NotnullValidator" />
</beans>